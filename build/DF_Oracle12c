FROM oraclelinux:7.2
MAINTAINER it.koertgen@gmail.com

# Context
ENV DIRPATH /home/hwk/demo
WORKDIR $DIRPATH/install
VOLUME $DIRPATH/install
RUN yum install -y unzip binutils compat-libcap1 compat-libstdc++-33 compat-libstdc++-33.i686 \
gcc gcc-c++ glibc glibc.i686 glibc-devel glibc-devel.i686 ksh libgcc libgcc.i686 libstdc++ \
libstdc++.i686 libstdc++-devel libstdc++-devel.i686 libaio libaio.i686 libaio-devel libaio-devel.i686 \
libXext libXext.i686 libXtst libXtst.i686 libX11 libX11.i686 libXau libXau.i686 libxcb libxcb.i686 \
libXi libXi.i686 make sysstat unixODBC unixODBC-devel

RUN  groupadd oinstall && groupadd dba \
&&  useradd -g dba -G oinstall -p oracle -d /home/oracle -s /bin/bash oracle

ADD ./install/* /tmp/
RUN /tmp/oracle12c-install.sh


